@using MyEvernoteEntities
@model List<Note>
@{
    ViewBag.Title = "Index";
}

<!-- Page Content -->
<div class="container">

    <div class="row">
        @*KATEGORİLER*@
        <div class="col-md-3">
            @Html.Partial("_PartialCategories")
        </div>

        <div class="col-md-9">
            <div class="row carousel-holder">
                @*CAROUSEL*@

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="http://placehold.it/800x300" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="http://placehold.it/800x300" alt="">
                            </div>
                            <div class="item">
                                <img class="slide-image" src="http://placehold.it/800x300" alt="">
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>

            @*Notlar*@
            <div class="row">
                @foreach (Note note in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="http://placehold.it/320x150" alt="@note.Title">
                            <div class="caption">
                                <h4>
                                    <a href="#">
                                        @note.Title
                                    </a>
                                </h4>
                                <h6 class="text-right">

                                    @note.Owner.UserName <span class="glyphicon glyphicon-user"></span><br />
                                    @note.ModifiedOn.ToString("dd.MM.yy HH:mm") <span class="glyphicon glyphicon-time"></span>
                                </h6>
                                @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 70)
                                {
                                    <p> @(note.Text.Substring(0, 70) + "...")</p>
                                    <p class="pull-right">
                                        <a href="#" class="btn btn-default btn-sm">Devamını Oku... <span class="glyphicon glyphicon-chevron-right "></span></a>
                                    </p>

                                }
                                else
                                {
                                    <p> @note.Text</p>
                                }



                            </div>
                            <div>
                                <hr />
                            </div>
                            <div class="ratings">
                                <p class="pull-right">
                                    <button class="btn btn-default btn-sm">
                                        <span class="glyphicon glyphicon-comment"></span> Yorumlar
                                    </button>
                                </p>
                                <p>
                                    <button class="btn btn-default btn-sm" type="button">
                                        <span class="glyphicon glyphicon-star-empty"></span> @note.LikeCount
                                    </button>
                                </p>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="http://placehold.it/320x150" alt="">
                        <div class="caption">
                            <h4>
                                <a href="#">
                                    Sit amet, consectetur.
                                </a>
                            </h4>
                            <p>
                                Sapien elit in malesuada semper mi, id sollicitudin urna fermentum.
                            </p>
                            <h6 class="text-right">
                                <span class="glyphicon glyphicon-user"></span> engincanmeydan <br />
                                <span class="glyphicon glyphicon-time"></span> 01.01.2022 14:16
                            </h6>
                        </div>
                        <div>
                            <hr />
                        </div>
                        <div class="ratings">
                            <p class="pull-right">
                                <button class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-comment"></span> Yorumlar
                                </button>
                            </p>
                            <p>
                                <button class="btn btn-default btn-sm" type="button">
                                    <span class="glyphicon glyphicon-star-empty"></span> 15
                                </button>
                            </p>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>